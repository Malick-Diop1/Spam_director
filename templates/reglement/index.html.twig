{% extends 'base.html.twig' %}

{% block title %}Reglement index{% endblock %}

{% block body %}
    <h1>Reglement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Integer</th>
                <th>Date</th>
                <th>ModeReglement</th>
                <th>NumPiece</th>
                <th>Montant</th>
                <th>Observation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reglement in reglements %}
            <tr>
                <td>{{ reglement.id }}</td>
                <td>{{ reglement.integer }}</td>
                <td>{{ reglement.date ? reglement.date|date('Y-m-d') : '' }}</td>
                <td>{{ reglement.modeReglement }}</td>
                <td>{{ reglement.numPiece }}</td>
                <td>{{ reglement.montant }}</td>
                <td>{{ reglement.observation }}</td>
                <td>
                    <a href="{{ path('app_reglement_show', {'id': reglement.id}) }}">show</a>
                    <a href="{{ path('app_reglement_edit', {'id': reglement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reglement_new') }}">Create new</a>
{% endblock %}
